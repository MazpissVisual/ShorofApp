<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/blue_50"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.faq.FaqActivity">

    <include
        android:id="@+id/toolbar_about"
        layout="@layout/custom_toolbar2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPanduan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Panduan Pengerjaan"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        style="@style/paragraf3Bold"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_about" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFaq"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPanduan" />
</androidx.constraintlayout.widget.ConstraintLayout>